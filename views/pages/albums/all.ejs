<!doctype html>
<html>
  <head>
    <% include ../../partials/head.ejs %>
    <link rel="stylesheet" type="text/css" href="css/albums.css">

  </head>
  <body>
    <% include ../../partials/header.ejs %>
    <div class="container-fluid no-padding">
      <div class="album-container row no-gutters">
        <% var newline=true %>
        <% albums.forEach(function(album) { %>
          <div class="col-md-6">
            <a href="/albums/<%= album.name %>">
              <div class="album-padding"></div>
              <div class="album-block album-hover" style="background-image:url(/private/album_thumbnail/<%= album.name %>/<%= album.src %>)">
                  <div class="album-name"><%= album.name %></div>
              </div>
            </a>
          </div>
          <% newline = !newline %>
          <% if(newline){%>
            <div class="w-100"></div>
          <%}%>
        <% }); %>
      </div>
    </div>

    <script src="js/photoswipe_init.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script> -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!-- <script src="https://code.jquery.com/jquery-3.2.1.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script> -->
    <script>
      var albumHover = $('.album-hover');
      var albumName = $('.album-name');

      albumHover.hover(function(){
        $(this).find(albumName).addClass("album-name-hover");
      }, function(){
        $(this).find(albumName).removeClass("album-name-hover");
      });


    </script>

  </body>
</html>
